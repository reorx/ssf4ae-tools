<Window x:Class="OnoEdit.HitboxDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ono="clr-namespace:OnoEdit"
        Title="HitboxData" Height="300" Width="700" Icon="/OnoEdit;component/Images/Ono.ico" Name="HitBox" LocationChanged="WindowLocationChanged" SizeChanged="WindowSizeChanged" StateChanged="WindowStateChanged">
    <DockPanel>
        <DockPanel DockPanel.Dock="Left">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Click="AddHB">Add New</Button>
                <Button IsEnabled="False" Click="RemoveHB">Remove</Button>
                <Button IsEnabled="False">Import...</Button>
                <Button IsEnabled="False">Export...</Button>
            </StackPanel>
            <ListBox Name="ListBox" ItemsSource="{Binding Path=BACFile.HitboxTable, Source={StaticResource OpenedFiles}}" SelectedIndex="0" Width="240" />
        </DockPanel>
        <GroupBox Header="Move Data" DataContext="{Binding Path=SelectedItem,ElementName=ListBox}">
            <DockPanel>
                <Label DockPanel.Dock="Top" Height="30" Content="{Binding Path=UsageString}"/>
                <ono:OnoGrid DataContext="{Binding Path=Data}" EditEnabled="False"/>
            </DockPanel>
            </GroupBox>
    </DockPanel>
</Window>
