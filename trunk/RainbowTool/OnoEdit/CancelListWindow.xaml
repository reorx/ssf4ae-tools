<Window x:Class="OnoEdit.CancelListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CancelListWindow" Height="300" Width="250">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Click="AddCancelList">Add New</Button>
            <Button Click="RemoveCancelList">Remove</Button>
            <Button IsEnabled="False">Import...</Button>
            <Button IsEnabled="False">Export...</Button>
        </StackPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Click="AddMove">Add New</Button>
            <Button Click="RemoveMove">Remove</Button>
        </StackPanel>

        <ListBox Height="100" DockPanel.Dock="Top" Name="ListBox" ItemsSource="{Binding Path=BCMFile.CancelLists, Source={StaticResource OpenedFiles}}" DisplayMemberPath="Name" SelectedIndex="0" />
        <DataGrid Name="Grid" CanUserAddRows="False" CanUserDeleteRows="True" CanUserSortColumns="False" CanUserResizeColumns="True" CanUserReorderColumns="False" ItemsSource="{Binding Path=SelectedItem.Moves,ElementName=ListBox}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridComboBoxColumn Width="200" ItemsSource="{Binding Path=BCMFile.Moves, Source={StaticResource OpenedFiles}}" Header="Move" DisplayMemberPath="Name" SelectedValueBinding="{Binding Path=Target}" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
