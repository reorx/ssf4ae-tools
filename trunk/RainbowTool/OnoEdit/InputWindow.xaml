<Window x:Class="OnoEdit.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ono="clr-namespace:OnoEdit"
        Title="InputWindow" Height="300" Width="500">
    <DockPanel>
        <DockPanel DockPanel.Dock="Left">
        <StackPanel DockPanel.Dock="top" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Click="AddInputMotion">Add New</Button>
            <Button Click="RemoveInputMotion">Remove</Button>
        </StackPanel>
        <ListBox Name="ListBox" ItemsSource="{Binding Path=BCMFile.InputMotions, Source={StaticResource OpenedFiles}}" DisplayMemberPath="Name" SelectedIndex="0" />
        </DockPanel>
        <ono:OnoGrid x:Name="InputGrid" DataContext="{Binding Path=SelectedItem.Entries, ElementName=ListBox}"/>
    </DockPanel>
</Window>
